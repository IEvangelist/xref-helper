{
  "name": "xref-helper",
  "displayName": "API Reference Link Helper",
  "description": "TODO",
  "version": "1.0.2",
  "engines": {
    "vscode": "^1.93.1"
  },
  "publisher": "IEvangelist",
  "categories": [
    "Other"
  ],
  "preview": true,
  "activationEvents": [ 
    "onLanguage:markdown",
    "onLanguage:xml"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "xrefHelper.insertXrefLink",
        "title": "Insert XREF Link",
        "shortTitle": "Link to XREF"
      },
      {
        "command": "xrefHelper.insertApiReferenceLink",
        "title": "Insert API Reference Link",
        "shortTitle": "Link to API"
      }
    ],
    "configuration": {
      "title": "XREF Helper",
      "properties": {
        "xrefHelper.defaultUrlFormat": {
          "type": "string",
          "description": "The default URL format to use when inserting an XREF URL.",
          "enum": [ "Default", "Full name", "Name with type", "Custom name"],
          "default": "Default"
        },
        "xrefHelper.apiUrl": {
          "type": "string",
          "description": "The URL to use when searching for XREFs. (Defaults to the .NET API search URL.)",
          "default": "https://learn.microsoft.com/api/apibrowser/dotnet/search"
        },
        "xrefHelper.queryStringParameters": {
          "type": "array",
          "description": "The query string parameters to include when searching for XREFs.",
          "subItems": {
            "type": "object"
          },
          "default": [
            { 
              "name": "api-version",
              "value": "0.2"
            },
            {
              "name": "locale",
              "value": "en-us"
            }
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "rimraf out && esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "build": "npm run esbuild",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test-compile": "tsc -p ./",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "22.x",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@typescript-eslint/parser": "^8.6.0",
    "@vscode/test-electron": "^2.3.0",
    "esbuild": "^0.23.1",
    "eslint": "^9.10.0",
    "glob": "^11.0.0",
    "mocha": "^10.2.0",
    "rimraf": "^6.0.1",
    "semantic-release": "^24.1.1",
    "semantic-release-stop-before-publish": "^1.0.0",
    "semantic-release-vsce": "^5.5.9",
    "typescript": "^5.0.4",
    "@types/node-fetch": "^2.6.11",
    "@types/xml2js": "^0.4.14"
  },
  "dependencies": {
    "node-fetch": "3.3.2",
    "xml2js": "^0.6.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/IEvangelist/xref-helper.git"
  },
  "vsce": {
    "pre-release": true
  }
}
